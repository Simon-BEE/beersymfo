{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="breadcrumb-container">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('home')}}">Accueil</a></li>
            <li class="breadcrumb-item"><a href="{{ path('security_login')}}">Se connecter</a></li>
            <li class="breadcrumb-item active">S'inscrire</li>
        </ol>
        <div class="d-flex justify-content-between">
            <h1>{{ title }}</h1>
        </div>
    </div>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email, {
            'label': 'Adresse email', 
            'help': 'Assurez vous d\'enregistrer une adresse email valide',
            'attr': {'placeholder': 'Adresse email'}
        }) }}

        {{ form_row(registrationForm.plainPassword.first, {
            'label': 'Mot de passe',
            'attr': {'placeholder': 'Mot de passe'}
        }) }}

        {{ form_row(registrationForm.plainPassword.second, {
            'label': 'Confirmer votre mot de passe',
            'attr': {'placeholder': 'Confirmer votre mot de passe'}
        }) }}

        <button class="btn btn-primary">S'inscrire</button>
    {{ form_end(registrationForm) }}
{% endblock %}
